# Terminal AI Companion 환경 설정
# 이 파일을 .env로 복사하고 필요한 설정을 변경하세요

# AI 제공자 설정 (openai, openrouter, ollama 중 선택)
AI_PROVIDER=ollama

# OpenAI 설정
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# OpenRouter 설정
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini

# Ollama 설정 (로컬 AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b

# AI 공통 설정
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

# 동반자 설정
COMPANION_NAME=AI동반자
COMPANION_USER_ID=default_user
COMPANION_DEFAULT_PERSONALITY=caring

# 메모리 시스템 설정
MEMORY_PROVIDER=mem0
MEMORY_VECTOR_STORE=chroma
MAX_SESSION_MEMORIES=100
MEMORY_SEARCH_LIMIT=5

# 메모리 LLM 설정
MEMORY_LLM_PROVIDER=ollama
MEMORY_LLM_MODEL=gemma3:1b
MEMORY_LLM_BASE_URL=http://localhost:11434

# 메모리 임베딩 설정
MEMORY_EMBED_PROVIDER=ollama
MEMORY_EMBED_MODEL=bge-m3
MEMORY_EMBED_BASE_URL=http://localhost:11434

# UI 설정 (테마: magenta, cyan, green, blue, red, yellow)
UI_THEME=magenta
UI_SHOW_TYPING_ANIMATION=true
UI_ANIMATION_DURATION=1.0
UI_CLEAR_SCREEN_ON_START=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5